<script>
document.addEventListener("DOMContentLoaded", () => {
  const searchIcon = document.querySelector('.search-icon');
  const searchContainer = document.getElementById('search-container');
  const closeSearch = document.querySelector('.close-search');
  const searchInput = searchContainer.querySelector('input');

  // open search
  searchIcon.addEventListener('click', () => {
    searchContainer.style.display = 'flex';
    searchInput.focus();
  });

  // close search
  closeSearch.addEventListener('click', () => {
    searchContainer.style.display = 'none';
    searchInput.value = '';
  });

  // enter key search response
  searchInput.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      e.preventDefault();

      if (searchInput.value.trim() === '') {
        alert('Please type something');
      } else {
        alert('Searching for: ' + searchInput.value);
      }
    }
  });
});
</script>
<script>//STAT NUMBER
  const counters = document.querySelectorAll(".stat-number");
  let started = false;

  function startCounter() {
    counters.forEach(counter => {
      const target = Number(counter.getAttribute("data-target"));
      let count = 0;
      const increment = target / 100;

      function update() {
        if (count < target) {
          count += increment;
          counter.textContent = Math.floor(count) + "+";
          requestAnimationFrame(update);
        } else {
          counter.textContent = target + "+";
        }
      }
      update();
    });
  }

  function checkStart() {
    const section = document.getElementById("counterSection");
    const pos = section.getBoundingClientRect().top;

    if (!started && pos < window.innerHeight - 100) {
      started = true;
      startCounter();
    }
  }

  window.addEventListener("scroll", checkStart);
  window.addEventListener("load", checkStart);
</script>

<script>//MENU
function attachFormHandler(formId, statusId) {
    const form = document.getElementById(formId);
    const statusBox = document.getElementById(statusId);

    if (!form || !statusBox) return;

    form.addEventListener("submit", function (e) {
        e.preventDefault();

        let name = form.querySelector("input[type='text']").value.trim();
        let email = form.querySelector("input[type='email']").value.trim();
        let message = form.querySelector("textarea").value.trim();

        statusBox.classList.remove("success", "error");

        if (name === "" || email === "" || message === "") {
            statusBox.style.display = "block";
            statusBox.classList.add("error");
            statusBox.innerHTML = "‚ùå Please fill all fields correctly.";
            return;
        }

        if (!email.includes("@") || !email.includes(".")) {
            statusBox.style.display = "block";
            statusBox.classList.add("error");
            statusBox.innerHTML = "‚ùå Enter a valid email!";
            return;
        }

        statusBox.style.display = "block";
        statusBox.classList.add("success");
        statusBox.innerHTML = "‚úÖ Message sent successfully!";

        form.reset();
    });
}

attachFormHandler("contactFormAyesha", "statusAyesha");
attachFormHandler("contactFormHamza", "statusHamza");
attachFormHandler("contactFormSara", "statusSara");
attachFormHandler("contactFormMaria", "statusMaria");
</script>
 <script>
    window.addEventListener("scroll", () => {
      const navbar = document.querySelector(".custom-navbar");
      navbar.classList.toggle("scrolled", window.scrollY > 50);
    });
  </script> 
