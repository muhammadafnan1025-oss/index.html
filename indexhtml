const observer = new IntersectionObserver(entries=>{
  entries.forEach(entry=>{
    if(entry.isIntersecting){
      entry.target.classList.add('show');
      observer.unobserve(entry.target);
    }
  });
},{threshold:0.2});

document.querySelectorAll('.fade-down').forEach(card=>{
  observer.observe(card);
});

// **Updated modal references with galModal prefix**
const galModalWrap = document.getElementById('galModalWrap');
const galModalTitle = document.getElementById('galModalTitle');
const galModalSubtitle = document.getElementById('galModalSubtitle');
const galModalContent = document.getElementById('galModalContent');

function openModal(service){
  galModalTitle.innerText = service.title;
  galModalSubtitle.innerText = service.subtitle;
  galModalContent.innerHTML = `
    <p><strong>Overview:</strong><br>${service.overview}</p>
    <p><strong>Benefits:</strong><br>${service.benefits.replace(/- /g,'‚Ä¢ ')}</p>
    <p><strong>Duration:</strong> ${service.duration}</p>`;
  galModalWrap.style.display = 'flex';
  document.body.style.overflow = 'hidden';
}
function closeGalModal(){
  galModalWrap.style.display = 'none';
  document.body.style.overflow = '';
}

// Close on clicking close button
galModalClose.addEventListener('click', closeGalModal);

// Close on clicking outside modal
galModalWrap.addEventListener('click', e => {
  if(e.target === galModalWrap) closeGalModal();
});

// Close on pressing Escape
document.addEventListener('keydown', e => {
  if(e.key === 'Escape') closeGalModal();
});
