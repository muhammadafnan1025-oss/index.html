<script>
  const carousel = document.getElementById('videoCarousel');

  carousel.addEventListener('slide.bs.carousel', function () {
    const videos = carousel.querySelectorAll('video');
    videos.forEach(video => {
      video.pause();
      video.currentTime = 0;
    });
  });

  carousel.addEventListener('slid.bs.carousel', function () {
    const activeVideo = carousel.querySelector('.carousel-item.active video');
    if (activeVideo) {
      activeVideo.play();
    }
  });

  // autoplay first video
  window.addEventListener('load', () => {
    const firstVideo = carousel.querySelector('.carousel-item.active video');
    if (firstVideo) firstVideo.play();
  });
</script>
<script>
document.querySelectorAll(".contact-form").forEach(form => {
  const name = form.querySelector(".name");
  const email = form.querySelector(".email");
  const msg = form.querySelector(".message");
  const success = form.querySelector(".success-msg");

  // Validation function
  function validate(input, rule) {
    const err = input.nextElementSibling;
    if (!rule) {
      input.classList.add("is-invalid");
      input.classList.remove("is-valid");
      err.style.display = "block";
      return false;
    } else {
      input.classList.remove("is-invalid");
      input.classList.add("is-valid");
      err.style.display = "none";
      return true;
    }
  }

  // Real-time validation
  name.addEventListener("input", () => validate(name, name.value.trim().length >= 3));
  email.addEventListener("input", () => validate(email, /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email.value)));
  msg.addEventListener("input", () => validate(msg, msg.value.trim().length > 5));

  // Form submit
  form.addEventListener("submit", e => {
    e.preventDefault();

    const validName = validate(name, name.value.trim().length >= 3);
    const validEmail = validate(email, /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email.value));
    const validMsg = validate(msg, msg.value.trim().length > 5);

    if (validName && validEmail && validMsg) {
      // Show success message
      success.classList.remove("d-none");

      // Auto-hide success message after 2.5s
      setTimeout(() => success.classList.add("d-none"), 2500);

      // Reset form
      form.reset();

      // Remove valid classes
      form.querySelectorAll(".is-valid").forEach(i => i.classList.remove("is-valid"));
    }
  });
});
</script>
</body>
</html>
