<script>
  function validateStep4(){
  let valid = true

  const name = document.getElementById('userName')
  const phone = document.getElementById('userPhone')
  const email = document.getElementById('userEmail')

 
  if(name.value.trim().length < 3){
    name.classList.add('is-invalid')
    document.getElementById('nameErr').classList.remove('d-none')
    valid = false
  }else{
    name.classList.remove('is-invalid')
    document.getElementById('nameErr').classList.add('d-none')
  }

  
  if(!/^\d{10,15}$/.test(phone.value.trim())){
    phone.classList.add('is-invalid')
    document.getElementById('phoneErr').classList.remove('d-none')
    valid = false
  }else{
    phone.classList.remove('is-invalid')
    document.getElementById('phoneErr').classList.add('d-none')
  }

  
  if(!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email.value.trim())){
    email.classList.add('is-invalid')
    document.getElementById('emailErr').classList.remove('d-none')
    valid = false
  }else{
    email.classList.remove('is-invalid')
    document.getElementById('emailErr').classList.add('d-none')
  }

  return valid
}
if(currentStep === 4){
  if(!validateStep4()) return
}
</script>
<script>
const modal = document.getElementById('serviceModal');
const modalTitle = document.getElementById('modalTitle');
const nextBtn = document.getElementById('nextBtn');
const prevBtn = document.getElementById('prevBtn');
const modalProgress = document.getElementById('modalProgress');

let currentStep = 1;
let selectedGender = null;

const originalModalBody = modal.querySelector('.modal-body').innerHTML;

function showStep(step){
  document.querySelectorAll('.step').forEach(s => s.classList.add('d-none'));
  document.querySelector('.step-' + step).classList.remove('d-none');

  prevBtn.classList.toggle('d-none', step === 1);
  nextBtn.innerText = step === 4 ? 'Submit' : 'Continue';
  
  nextBtn.disabled = step !== 4;
  modalProgress.style.width = ((step-1)/4*100) + '%';
}

function addValidationListeners(){
  ['userName','userPhone','userEmail'].forEach(id=>{
    const el = document.getElementById(id);
    if(!el) return;

    el.addEventListener('input', e=>{
      const val = e.target.value.trim();
      if(id==='userPhone')
        e.target.classList.toggle('is-invalid', !/^\d{10,15}$/.test(val));
      else if(id==='userEmail')
        e.target.classList.toggle('is-invalid', !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(val));
      else
        e.target.classList.toggle('is-invalid', val.length < 3);
    });
  });

  ['concernSelect','sessionSelect'].forEach(id=>{
    const el = document.getElementById(id);
    if(!el) return;
    el.addEventListener('change', checkStep3Validity);
  });
}

function checkStep3Validity(){
  const concern = document.getElementById('concernSelect');
  const session = document.getElementById('sessionSelect');
  nextBtn.disabled = !(concern.value && session.value);
}

modal.addEventListener('show.bs.modal', function (event) {

  const card = event.relatedTarget;

  modal.querySelector('.modal-body').innerHTML = originalModalBody;
  currentStep = 1;
  selectedGender = null;

  showStep(currentStep);

  modalTitle.innerText = card.getAttribute('data-title');
  
  const genderButtons = modal.querySelectorAll('#genderList button');
  genderButtons.forEach(btn=>{
    btn.onclick = ()=>{
      genderButtons.forEach(b=>b.classList.remove('active'));
      btn.classList.add('active');
      selectedGender = btn.innerText;
      nextBtn.disabled = false;
    };
  });
  
  const services = card.getAttribute('data-services').split(',');
  const serviceList = modal.querySelector('#serviceList');
  serviceList.innerHTML = '';

  services.forEach(service=>{
    const item = document.createElement('button');
    item.type = 'button';
    item.className = 'list-group-item list-group-item-action';
    item.innerText = service;

    item.onclick = ()=>{
      serviceList.querySelectorAll('button').forEach(b=>b.classList.remove('active'));
      item.classList.add('active');
      nextBtn.disabled = false;
    };

    serviceList.appendChild(item);
  });

  addValidationListeners();
});

nextBtn.onclick = () => {

  if(currentStep < 4){
    currentStep++;
    showStep(currentStep);
    return;
  }
  
  const name = document.getElementById('userName');
  const phone = document.getElementById('userPhone');
  const email = document.getElementById('userEmail');

  let valid = true;

  if(name.value.trim().length < 3){ name.classList.add('is-invalid'); valid=false; }
  if(!/^\d{10,15}$/.test(phone.value.trim())){ phone.classList.add('is-invalid'); valid=false; }
  if(!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email.value.trim())){ email.classList.add('is-invalid'); valid=false; }

  if(!valid) return;

  modal.querySelector('.modal-body').innerHTML = `
    <div class="text-center py-5">
      <div style="font-size:50px; color:#28a745;">üéâ</div>
      <h3 class="mt-3">Submitted Successfully!</h3>
      <p>Thank you <strong>${name.value}</strong></p>
      <p>Gender: ${selectedGender}</p>
    </div>
  `;

  nextBtn.classList.add('d-none');
  prevBtn.classList.add('d-none');
  modalProgress.style.width = "100%";

  setTimeout(()=>{
    bootstrap.Modal.getInstance(modal).hide();
  },3000);
};

prevBtn.onclick = ()=>{
  if(currentStep > 1){
    currentStep--;
    showStep(currentStep);
  }
};
 modal.addEventListener('hidden.bs.modal', () => {
  
  modal.querySelector('.modal-body').innerHTML = originalModalBody;
  
  currentStep = 1;
  selectedGender = null;
  
  nextBtn.classList.remove('d-none');
  prevBtn.classList.add('d-none');
  nextBtn.innerText = 'Continue';
  nextBtn.disabled = true;
  
  modalProgress.style.width = '0%';
});
</script>
<script>
function filterCards(category,btn){
  document.querySelectorAll('.tabs button').forEach(b=>b.classList.remove('active'))
  btn.classList.add('active')

  document.querySelectorAll('.card').forEach(card=>{
    card.style.display =
      (category === 'all' || card.classList.contains(category))
      ? 'block' : 'none'
  })
}
</script>

<script>
let qty = 1
let cart = []
let currentProduct = {}
let currentPay = "COD"

const info = document.getElementById('info')
const payment = document.getElementById('payment')
const cartModal = document.getElementById('cartModal')
const cartCount = document.getElementById('cartCount')
const cartItems = document.getElementById('cartItems')


const checkoutNextBtn = document.getElementById('checkoutNextBtn')

const nameInput = document.getElementById('name')
const phoneInput = document.getElementById('phone')
const emailInput = document.getElementById('email')
const addressInput = document.getElementById('address')


const payDetails = document.getElementById('payDetails')
const confirmPayBtn = document.getElementById('confirmPayBtn')
const invoiceModal = document.getElementById('invoiceModal')
const invoiceContent = document.getElementById('invoiceContent')

function closeModal(){
  document.getElementById('productModal').style.display = 'none'
  document.querySelector('.modal-close-outside').style.display = 'none'
  document.getElementById('pageBlur').classList.remove('blur')
}

function changeQty(val){
  qty = Math.max(1, qty + val)
  document.getElementById('qty').innerText = qty
}

function addToCart(){
  cart.push({
    title: currentProduct.title,
    price: currentProduct.price,
    qty
  })
  updateCart()
  closeModal()
}

function proceedToForm(){
  cart = [{
    title: currentProduct.title,
    price: currentProduct.price,
    qty
  }]
  updateCart()
  closeModal()
  resetInfoForm()
  info.style.display = 'flex'
}

function updateCart(){
  cartCount.innerText = cart.length
  cartItems.innerHTML = cart.map(i=>`
    <div class="cart-item">
      <span>${i.title} √ó ${i.qty}</span>
      <b>$${i.price * i.qty}</b>
    </div>
  `).join('')
}

function openCart(){ cartModal.style.display = 'flex' }

function checkoutCart(){
  closeAll()
  resetInfoForm()
  info.style.display = 'flex'
}

function resetInfoForm(){
  nameInput.value = ''
  phoneInput.value = ''
  emailInput.value = ''
  addressInput.value = ''
  validateInfo()
}

function validateInfo(){
  let valid = true

  if(nameInput.value === ""){
    nameError.style.display = "none"
    valid = false
  }
  else if(!nameInput.checkValidity()){
    nameError.innerText = "Name must be at least 3 characters"
    nameError.style.display = "block"
    valid = false
  }else{
    nameError.style.display = "none"
  }

  if(phoneInput.value === ""){
    phoneError.style.display = "none"
    valid = false
  }
  else if(!phoneInput.checkValidity()){
    phoneError.innerText = "Enter valid Pakistani number (03XXXXXXXXX)"
    phoneError.style.display = "block"
    valid = false
  }else{
    phoneError.style.display = "none"
  }

  if(emailInput.value === ""){
    emailError.style.display = "none"
    valid = false
  }
  else if(!emailInput.checkValidity()){
    emailError.innerText = "Enter a valid email address"
    emailError.style.display = "block"
    valid = false
  }else{
    emailError.style.display = "none"
  }

  if(addressInput.value === ""){
    addressError.style.display = "none"
    valid = false
  }
  else if(!addressInput.checkValidity()){
    addressError.innerText = "Address must be at least 10 characters"
    addressError.style.display = "block"
    valid = false
  }else{
    addressError.style.display = "none"
  }

  checkoutNextBtn.classList.toggle("disabled", !valid)
}


[nameInput, phoneInput, emailInput, addressInput].forEach(i=>{
  i.addEventListener('input', validateInfo)
  i.addEventListener('blur', validateInfo)
})

function openPayment(){
  if(checkoutNextBtn.classList.contains('disabled')) return
  info.style.display = 'none'
  payment.style.display = 'flex'
}
const paymentFields = {
  COD: '',
  Easypaisa: `
    <input id="epPhone" placeholder="Easypaisa Number" pattern="^03[0-9]{9}$" required>
    <input id="epPin" type="password" placeholder="PIN (4 digits)" pattern="^[0-9]{4}$" required>
  `,
  JazzCash: `
    <input id="jcPhone" placeholder="JazzCash Number" pattern="^03[0-9]{9}$" required>
    <input id="jcPin" type="password" placeholder="PIN (4 digits)" pattern="^[0-9]{4}$" required>
  `,
  Card: `
    <input id="cardName" placeholder="Card Holder Name" required>
    <input id="cardNumber" placeholder="Card Number" pattern="^[0-9]{16}$" required>
    <input id="cardExpiry" placeholder="MM/YY" pattern="^(0[1-9]|1[0-2])\\/([0-9]{2})$" required>
    <input id="cardCVV" type="password" placeholder="CVV" pattern="^[0-9]{3,4}$" required>
  `,
  HBL: `
    <input id="hblAcc" placeholder="HBL Account Number" pattern="^[0-9]{10,16}$" required>
    <input id="hblPin" type="password" placeholder="PIN (4 digits)" pattern="^[0-9]{4}$" required>
  `
}

function selectPay(el,type){
  currentPay = type
  document.querySelectorAll('.pay-card').forEach(p=>p.classList.remove('active'))
  el.classList.add('active')

  payDetails.innerHTML = paymentFields[type] || ''
  confirmPayBtn.disabled = type !== 'COD'

  if(type !== 'COD'){
    const inputs = payDetails.querySelectorAll('input')

    inputs.forEach(input=>{
      const error = document.createElement('span')
      error.className = 'error'
      input.after(error)

      input.addEventListener('input',()=>{
        if(!input.checkValidity()){
          error.innerText = "Invalid input"
        }else{
          error.innerText = ""
        }

        confirmPayBtn.disabled =
          !Array.from(inputs).every(i=>i.checkValidity())
      })
    })
  }
}

function confirmOrder(){
  invoiceContent.innerHTML = `
    <h4>Customer Details</h4>
    Name: ${nameInput.value}<br>
    Phone: ${phoneInput.value}<br>
    Email: ${emailInput.value}<br>
    Address: ${addressInput.value}<br><br>

    <h4>Items</h4>
    ${cart.map(i=>`${i.title} √ó ${i.qty} = $${i.price*i.qty}`).join('<br>')}<br><br>

    <h4>Payment</h4>
    ${currentPay}<br><br>

    <div class="total">
      Total: $${cart.reduce((t,i)=>t+(i.price*i.qty),0)}
    </div>
  `

  closeAll()
  invoiceModal.style.display = 'flex'
  cart = []
  updateCart()
}

function closeAll(){
  document.querySelectorAll('.modal').forEach(m=>m.style.display='none')
  payDetails.innerHTML=''
  confirmPayBtn.disabled=true
}

function openQtyModal(el){
  const card = el.closest('.card')

  currentProduct = {
    title: card.dataset.title,
    price: Number(card.dataset.price),
    desc: card.querySelector('.speciality').innerText,
    img: card.querySelector('img').src
  }

  document.getElementById('mImg').src = currentProduct.img
  document.getElementById('mTitle').innerText = currentProduct.title
  document.getElementById('mDesc').innerText = currentProduct.desc
  document.getElementById('mPrice').innerText = "$" + currentProduct.price

  qty = 1
  document.getElementById('qty').innerText = qty

  document.getElementById('productModal').style.display = 'flex'
  document.querySelector('.modal-close-outside').style.display = 'flex'
  document.getElementById('pageBlur').classList.add('blur')
}
</script>

<script>
const ztPopup = document.getElementById("ztOfferPopup");
const ztHeading = document.getElementById("ztOfferHeading");

function ztOpenPopup(title){
  ztHeading.innerText = title;
  ztPopup.style.display = "flex";
}

function ztClosePopup(){
  ztPopup.style.display = "none";
}

function ztValidate(name, email, mobile, message, successBox){
  let valid = true;

  const emailRx = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  const pkRx = /^(?:\+92|03)\d{9}$/;

  [name,email,mobile,message].forEach(i =>
    i.classList.remove("zt-input-error")
  );

  if(name.value.trim().length < 3){ name.classList.add("zt-input-error"); valid=false; }
  if(!emailRx.test(email.value.trim())){ email.classList.add("zt-input-error"); valid=false; }
  if(!pkRx.test(mobile.value.trim())){ mobile.classList.add("zt-input-error"); valid=false; }
  if(message.value.trim().length < 10){ message.classList.add("zt-input-error"); valid=false; }

  if(valid){
    successBox.style.display = "block";
    setTimeout(()=>{
      name.form.reset();
      successBox.style.display = "none";
      ztClosePopup();
    },2000);
  }
}

/* Offer Form */
document.getElementById("ztOfferForm").addEventListener("submit",function(e){
  e.preventDefault();
  ztValidate(
    ztOfferName,
    ztOfferEmail,
    ztOfferMobile,
    ztOfferMessage,
    this.querySelector(".zt-success-msg")
  );
});

/* Contact Form */
document.getElementById("ztContactForm").addEventListener("submit",function(e){
  e.preventDefault();
  ztValidate(
    ztContactName,
    ztContactEmail,
    ztContactMobile,
    ztContactMessage,
    this.querySelector(".zt-success-msg")
  );
});
</script>
